<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12"
    tools:context="com.doanjava.nhantam.wifidoctor.devices_connected.DeviceConnectedActivity">

    <LinearLayout
        android:background="@color/color_status_bar"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/imgBackDetailWifi"
            android:padding="@dimen/dp15"
            android:src="@drawable/ic_back"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent" />
        <com.doanjava.nhantam.wifidoctor.custom.WDTextView
            android:id="@+id/txtWifiName"
            android:gravity="center_vertical"
            app:fontTypeFaceName="Lato-Regular.ttf"
            android:textSize="@dimen/sp18"
            android:textColor="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:background="@color/color_status_bar"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:padding="@dimen/dp22"
            android:src="@drawable/ic_infomation"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <com.doanjava.nhantam.wifidoctor.custom.WDTextView
            android:gravity="center_vertical"
            app:fontTypeFaceName="Lato-Regular.ttf"
            android:textSize="@dimen/sp15"
            android:textColor="@color/color_white"
            android:text="@string/remainder_change_password"
            android:layout_marginRight="@dimen/sp20"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtCountAppsConnectedDetail"
        android:paddingLeft="@dimen/sp15"
        android:background="@color/color_background_ads2"
        android:layout_weight="1"
        android:textSize="@dimen/sp15"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <FrameLayout
        android:id="@+id/layoutAdsDetailWifi"
        android:layout_weight="2"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </FrameLayout>

    <TextView
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewDeviceConnected"
        android:layout_weight="6.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </android.support.v7.widget.RecyclerView>



</LinearLayout>
